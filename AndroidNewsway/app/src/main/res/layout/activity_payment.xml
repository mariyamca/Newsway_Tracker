<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/pay2"
    tools:context="com.example.mariya.newswaytracker.PaymentActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="91dp"
                android:layout_height="37dp"
                android:text="Product Name" />

            <TextView
                android:id="@+id/prdtxt"
                android:layout_width="304dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="91dp"
                android:layout_height="37dp"
                android:text="Plan" />
            <TextView
                android:id="@+id/plntxt"
                android:layout_width="304dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="91dp"
                android:layout_height="37dp"
                android:text="Rate" />

            <TextView
                android:id="@+id/ratetxt"
                android:layout_width="304dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_width="91dp"
                android:layout_height="37dp"
                android:text="Status" />

            <TextView
                android:id="@+id/ststxtt"
                android:layout_width="304dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/paystastxtt"
                android:layout_width="91dp"
                android:layout_height="37dp"
                android:text="Paystatus"
                />

            <TextView
                android:id="@+id/payststxtt"
                android:layout_width="304dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimary"
            />

    </LinearLayout>
    <TextView
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/paytxt"
        android:layout_marginTop="60px"
        android:layout_marginLeft="50px"
        android:text="Pay Using"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="25dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30px"
        android:layout_marginLeft="80px">

        <Button
            android:id="@+id/btndebit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160px"
            android:text="DEBIT CARD" />

    </LinearLayout>


</LinearLayout>
