<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mariya.newswaytracker.PasswordActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/curtpasswordtxt"
            android:layout_width="119dp"
            android:layout_height="46dp"
            android:text="Current Password"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/curtpassEditText"
            android:layout_width="244dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/newpasstxt"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:text="New Password"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/newpassEditText"
            android:layout_width="244dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cnfpasswordtxt"
            android:layout_width="119dp"
            android:layout_height="46dp"
            android:text="Confirm Password"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/cnfpassEditText"
            android:layout_width="244dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/subButton"
            android:text="SUBMIT"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/canButton"
            android:text="CANCEL"/>

    </LinearLayout>

</LinearLayout>
